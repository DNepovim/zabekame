.songbook-thumb
    position relative
    display inline-flex
    align-items center
    justify-content center
    width 100px
    height 120px
    margin 5px
    color $c-text
    text-decoration none
    border $d-border $c-border solid
    border-radius $d-radius
    box-shadow 1px 1px 1px $c-text-light
    transition box-shadow 300ms, transform 300ms

    &-edit
        position absolute
        top 5px
        right 5px
        width 15px
        height 15px

        .shape
            fill $c-text-light
            transition fill 300ms

        &:hover
            .shape
                fill $c-text

    &-link
        display flex
        align-items center
        justify-content center
        width 100%
        height 100%
        text-decoration none

    &:hover
        transform translateY(-10px)
        box-shadow 2px 2px 1px $c-text-light
