.songbook-thumb
    position relative
    display inline-flex
    align-items center
    justify-content center
    width 100px
    height 120px
    margin 5px
    color $c-text
    text-decoration none
    border $d-border $c-border solid
    border-radius $d-radius
    box-shadow 1px 1px 1px $c-text-light
    transition box-shadow 300ms, transform 300ms

    &-edit
        position absolute
        bottom 5px
        right 5%
        width 90%
        font-size 0.8rem
        color $c-text-light
        text-align center
        text-decoration none
        border-radius 2px
        transition color 300ms

        .fa
            margin 0 0.2em 0 0

        &:hover
            color $c-text
            border $d-border $c-border solid

    &-link
        display flex
        align-items center
        justify-content center
        width 100%
        height 100%
        text-decoration none

    &:hover
        transform translateY(-5px)
        box-shadow 2px 2px 1px $c-text-light
