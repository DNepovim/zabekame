.song
    &-box
        max-width 600px
        margin 5vh auto

    &-input
        border none
        background none

    &-title
        padding 0
        margin 0

    &-url
        color $c-text-light

    &-link
        appearance none
        font-size 0.8rem
        color $c-text-light
        text-decoration none
        border none
        background none
        padding 0

        &:hover
            text-decoration underline

    &-guid
        position relative
        left -0.2em
        width 40%
        padding 0

        &.exist
            background-color $c-error-background

    &-interpreter
        width 100%
        font-style italic

    &-lyric
        font-size 1.2rem
        width 100%
        min-height 70vh

    &-fieldset
        &-half
            display inline-block

        &-title
            position relative

            &:before
                content ''
                display block
                position absolute
                bottom 0.4em
                z-index -1
                width 100%
                height $d-border
                background-color $c-border
