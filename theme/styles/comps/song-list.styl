.song-list
    list-style none
    min-height 50vh
    margin-top 1rem
    margin-bottom @margin-top

    &-item
        padding 0.2em 0.5em
        border-bottom $d-border $c-border solid
        background-color $c-blank

        &:first-of-type
            border-top $d-border $c-border solid

    &-link
        color $c-text
        text-decoration none

    &-icon
        float right

    .view-sortable &
        &-item
            courser move
