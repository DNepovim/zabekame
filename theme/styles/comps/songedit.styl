.songedit
    &-box
        max-width 600px
        margin 5vh auto

    &-input
        border none
        background none

    &-title
        font-size 4rem
        font-weight 300
        line-height 1rem
        padding 0 0.05em

    &-url
        color $c-text-light

    &-guid
        position relative
        left -0.2em
        width 40%
        padding 0

    &-interpreter
        width 100%
        text-align right
        font-style italic

    &-lyric
        width 100%
        min-height 70vh

    &-fieldset
        &-half
            display inline-block
            width 49%

        &-title
            position relative

            &:before
                content ''
                display block
                position absolute
                bottom 0.4em
                z-index -1
                width 100%
                height $d-border
                background-color $c-border
