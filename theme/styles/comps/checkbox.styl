.checkbox
    display flex
    position relative
    cursor pointer
    margin 1em 0

    &-label
        color $c-text-light
        transition color 300ms

        &:before
            content ' '
            display block
            width 1em
            height 1em
            position absolute
            top 0
            left 0
            background $c-blank

        &:after
            content ' '
            display block
            width 1em
            height 1em
            border 2px solid $c-text-light
            position absolute
            top 0.2em
            left 0
            background $c-blank
            transition 100ms ease-in-out

    &-input
        margin 0 0.5em 0 0

        &:checked ~ .checkbox-label
            color $c-text

            &:after
                border-top-style none
                border-right-style none
                transform rotate(-45deg)
                width 0.75em
                border-color $c-text
